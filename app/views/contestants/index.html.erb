<p id="notice"><%= notice %></p>

<h1>Listing Contestants</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contestants.each do |contestant| %>
      <tr>
      <td><h4><%= contestant.firstname %> <%= contestant.lastname %></h4></td>
      <td><h3><%= contestant.email %> <%= contestant.zipcode %></h3></td>
      <td><h2><%= contestant.birthday %> <%= contestant.provider %></h2></td>
        <td><%= link_to 'Show', contestant %></td>
        <td><%= link_to 'Edit', edit_contestant_path(contestant) %></td>
        <td><%= link_to 'Destroy', contestant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

